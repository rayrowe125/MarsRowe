<% @shirts.each do |shirt| %>
<%= image_tag shirt.image.url(:medium), style: 'margin-bottom: 5px;' %>
<%#= link_to "Delete", shirt, method: :delete %>
  <% if shirt.users.include?(current_user) %>
    <%= link_to fa_icon("check-circle-o"), purchases_path(id: shirt.id), method: :delete, style: "color: green"%>
  <% else %>
    <%= link_to fa_icon("circle-o"), purchases_path(shirt_id: shirt.id), method: :post, style: "color: gray"%>
  <% end %>
<% end %>

<%= render 'shirts/new', locals: { shirt: @shirt } %>